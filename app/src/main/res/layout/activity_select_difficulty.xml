<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_difficulty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenbgplank"
    tools:context="com.example.innovativenetwork.truefalse.SelectDifficultyActivity">


    <TextView
        android:id="@+id/tv_selectDifficulty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="SELECT DIFFICULTY"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#fff"
        android:textSize="35sp"

        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_baby"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_gray"
            android:paddingBottom="5dp"
            android:text="BABY"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_easy"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_gray"
            android:paddingBottom="5dp"
            android:text="EASY"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_medium"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_gray"
            android:paddingBottom="5dp"
            android:text="MEDIUM"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_high"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_gray"
            android:paddingBottom="5dp"
            android:text="HIGH"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_superHigh"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_gray"
            android:paddingBottom="5dp"
            android:text="SUPER HIGH"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_megaHigh"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_gray"
            android:paddingBottom="5dp"
            android:text="MEGA HIGH"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>
