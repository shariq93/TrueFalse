<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context="com.example.innovativenetwork.truefalse.Activities.GameActivity">
<RelativeLayout
    android:id="@+id/cont"
    android:gravity="center"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/pb_game_progress"
        android:layout_centerInParent="true"

        android:layout_toLeftOf="@+id/tv_question_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="1/3"
        android:textSize="25sp"
        android:textColor="#fff"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_question_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        android:layout_below="@+id/cont"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#fff">

            <ImageView
                android:id="@+id/iv_questin_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/apple" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/soundicon" />
            <ImageView
                android:id="@+id/iv_ans_status"
                android:visibility="gone"
                android:src="@drawable/ico_check"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="I"
                android:textColor="#000"
                android:textSize="40sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="Bannana"
                android:id="@+id/tv_question_text"
                android:textColor="#fff"
                android:textSize="40sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="I"
                android:textColor="#000"
                android:textSize="40sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="2">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_true"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:text="TRUE"
                android:id="@+id/btn_true"
                android:textColor="#000"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold" />


            <Button

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_false"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:text="FALSE"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:id="@+id/btn_false" />

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
